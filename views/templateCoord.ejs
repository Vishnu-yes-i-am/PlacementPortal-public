                            <button type="button" class="close btn" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form action="/admin/postNews" method="post">

                                <div class="form-group">
                                    <label for="q-title">News Title</label>
                                    <input class="form-control" type="text" name="title" maxlength="100" id="q-title"
                                        required>
                                </div>
                                <div class="form-group mt-2">
                                    <label for="q-detail">Brief News</label>
                                    <textarea class="form-control" id="q-detail" rows="3" name="News"
                                        required></textarea>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </form>
                        </div>
